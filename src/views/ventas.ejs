<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BCruD - Ventas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="/">BCruD</a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/clientes">Clientes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/ventas">Ventas</a>
            </li>
        </ul>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID Venta</th>
                            <th>Fecha</th>
                            <th>Precio Venta</th>
                            <th>ID Producto</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(venta => { %>
                            <tr>
                                <td><%= venta.id_venta %></td>
                                <td><%= venta.fecha %></td>
                                <td><%= venta.precio_venta %></td>
                                <td><%= venta.id_Producto %></td>
                                <td>
                                    <a href="/ventas/edit/<%= venta.id_venta %>" class="btn btn-warning">Editar</a>
                                    <a href="/ventas/delete/<%= venta.id_venta %>" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <form action="/ventas/add" method="post">
                    <div class="form-group">
                        <input type="text" name="id_venta" placeholder="ID Venta" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="date" name="fecha" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="number" step="0.01" name="precio_venta" placeholder="Precio Venta" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="id_Producto" placeholder="ID Producto" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Venta</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
