<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BCruD - Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="/">BCruD</a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/clientes">Clientes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/ventas">Ventas</a>
            </li>
        </ul>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th>ID Venta</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(cliente => { %>
                            <tr>
                                <td><%= cliente.id_cliente %></td>
                                <td><%= cliente.nombre_cliente %></td>
                                <td><%= cliente.direccion %></td>
                                <td><%= cliente.id_venta %></td>
                                <td>
                                    <a href="/clientes/edit/<%= cliente.id_cliente %>" class="btn btn-warning">Editar</a>
                                    <a href="/clientes/delete/<%= cliente.id_cliente %>" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <form action="/clientes/add" method="post">
                    <div class="form-group">
                        <input type="text" name="id_cliente" placeholder="Id" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="nombre_cliente" placeholder="Nombre" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="direccion" placeholder="Dirección" class="form-control">
                    </div>
                    <div class="form-group">
                        <select name="id_venta" class="form-control">
                            <option value="">Seleccione ID de Venta</option>
                            <% ventas.forEach(venta => { %>
                                <option value="<%= venta.id_venta %>"><%= venta.id_venta %></option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar Cliente</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
